<?xml version="1.0" encoding="utf-8"?>
<eightbitlab.com.blurview.BlurTarget xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainBlurTarget"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/settings_coordinator"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.goodwy.commons.views.MyAppBarLayout
            android:id="@+id/settings_appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/settings_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:title="@string/settings"
                app:titleTextAppearance="@style/AppTheme.ActionBar.TitleTextStyle" />
        </com.goodwy.commons.views.MyAppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/settingsNestedScrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:paddingHorizontal="@dimen/activity_padding_left_right"
            android:scrollbars="none"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:id="@+id/settings_holder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/settings_appearance_label"
                    style="@style/SettingsSectionLabelStyle"
                    android:layout_marginTop="12dp"
                    android:text="@string/pref_category_appearance"
                    tools:textColor="@color/primary" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/settingsColorCustomizationHolder"
                    style="@style/SettingsSectionHolder"
                    app:cardCornerRadius="@dimen/activity_margin"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:id="@+id/settings_color_customization_wrapper"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/settings_show_dialpad_button_holder"
                            style="@style/SettingsHolderSwitchStyle">

                            <com.goodwy.commons.views.MyLiquidSwitch
                                android:id="@+id/settings_show_dialpad_button"
                                style="@style/SettingsSwitchStyle"
                                android:text="@string/show_dialpad_button"
                                app:switchPadding="@dimen/bigger_margin" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/settings_colored_contacts_holder"
                            style="@style/SettingsHolderSwitchStyle">

                            <com.goodwy.commons.views.MyLiquidSwitch
                                android:id="@+id/settings_colored_contacts"
                                style="@style/SettingsSwitchStyle"
                                android:text="@string/colored_contacts"
                                app:switchPadding="@dimen/bigger_margin" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/settingsContactColorListHolder"
                            style="@style/SettingsHolderStyle"
                            android:paddingEnd="@dimen/medium_margin">

                            <com.goodwy.commons.views.MyTextView
                                android:id="@+id/settings_contact_color_list_label"
                                style="@style/SettingsTextLabelStyle"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:layout_toStartOf="@+id/settings_contact_color_list_icon"
                                android:text="@string/contact_color_list" />

                            <ImageView
                                android:id="@+id/settings_contact_color_list_icon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="@dimen/settings_margin"
                                android:clickable="false"
                                android:contentDescription="@string/contact_color_list"
                                android:paddingEnd="@dimen/small_margin"
                                android:src="@drawable/ic_color_list_android" />
                        </RelativeLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/settingsGeneralLabel"
                    style="@style/SettingsSectionLabelStyle"
                    android:text="@string/general"
                    tools:textColor="@color/primary" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/settingsGeneralHolder"
                    style="@style/SettingsSectionHolder"
                    app:cardCornerRadius="@dimen/activity_margin"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:id="@+id/settingsGeneralWrapper"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/settings_manage_contact_fields_holder"
                            style="@style/SettingsHolderStyle">

                            <com.goodwy.commons.views.MyTextView
                                android:id="@+id/settings_manage_contact_fields"
                                style="@style/SettingsTextLabelStyle"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="68dp"
                                android:text="@string/manage_shown_contact_fields" />

                            <ImageView
                                android:id="@+id/settings_manage_contact_fields_chevron"
                                style="@style/SettingsChevronStyle"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="@dimen/smaller_margin"
                                android:contentDescription="@string/manage_shown_contact_fields" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/settings_merge_duplicate_contacts_holder"
                            style="@style/SettingsHolderSwitchStyle">

                            <com.goodwy.commons.views.MyLiquidSwitch
                                android:id="@+id/settings_merge_duplicate_contacts"
                                style="@style/SettingsSwitchStyle"
                                android:text="@string/merge_duplicate_contacts"
                                app:switchPadding="@dimen/bigger_margin" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/settings_show_call_confirmation_holder"
                            style="@style/SettingsHolderSwitchStyle">

                            <com.goodwy.commons.views.MyLiquidSwitch
                                android:id="@+id/settings_show_call_confirmation"
                                style="@style/SettingsSwitchStyle"
                                android:text="@string/show_call_confirmation_dialog"
                                app:switchPadding="@dimen/bigger_margin" />

                        </RelativeLayout>


                        <RelativeLayout
                            android:id="@+id/settings_on_contact_click_holder"
                            style="@style/SettingsHolderStyle">

                            <com.goodwy.commons.views.MyTextView
                                android:id="@+id/settings_on_contact_click_label"
                                style="@style/SettingsTextLabelStyle"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:layout_toStartOf="@+id/settings_on_contact_click"
                                android:text="@string/on_contact_click" />

                            <com.goodwy.commons.views.MyTextView
                                android:id="@+id/settings_on_contact_click"
                                style="@style/SettingsTextValueStyle"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="@dimen/settings_margin"
                                tools:text="@string/contacts_tab" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/settings_show_only_contacts_with_numbers_holder"
                            style="@style/SettingsHolderSwitchStyle">

                            <com.goodwy.commons.views.MyLiquidSwitch
                                android:id="@+id/settings_show_only_contacts_with_numbers"
                                style="@style/SettingsSwitchStyle"
                                android:text="@string/show_only_contacts_with_numbers"
                                app:switchPadding="@dimen/bigger_margin" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/settingsFormatPhoneNumbersHolder"
                            style="@style/SettingsHolderSwitchStyle">

                            <com.goodwy.commons.views.MyLiquidSwitch
                                android:id="@+id/settingsFormatPhoneNumbers"
                                style="@style/SettingsSwitchStyle"
                                android:text="@string/format_phone_numbers"
                                app:switchPadding="@dimen/bigger_margin" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/settings_font_size_holder"
                            style="@style/SettingsHolderStyle">

                            <com.goodwy.commons.views.MyTextView
                                android:id="@+id/settings_font_size_label"
                                style="@style/SettingsTextLabelStyle"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:layout_toStartOf="@+id/settings_font_size"
                                android:text="@string/font_size" />

                            <com.goodwy.commons.views.MyTextView
                                android:id="@+id/settings_font_size"
                                style="@style/SettingsTextValueStyle"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="@dimen/settings_margin"
                                tools:text="@string/medium" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/settings_use_english_holder"
                            style="@style/SettingsHolderSwitchStyle">

                            <com.goodwy.commons.views.MyLiquidSwitch
                                android:id="@+id/settings_use_english"
                                style="@style/SettingsSwitchStyle"
                                android:text="@string/use_english_language"
                                app:switchPadding="@dimen/bigger_margin" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/settings_language_holder"
                            style="@style/SettingsHolderStyle">

                            <com.goodwy.commons.views.MyTextView
                                android:id="@+id/settings_language_label"
                                style="@style/SettingsTextLabelStyle"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:layout_toStartOf="@+id/settings_language"
                                android:text="@string/language" />

                            <com.goodwy.commons.views.MyTextView
                                android:id="@+id/settings_language"
                                style="@style/SettingsTextValueStyle"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="@dimen/settings_margin"
                                tools:text="English" />

                        </RelativeLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/settingsTabsLabel"
                    style="@style/SettingsSectionLabelStyle"
                    android:text="@string/tabs"
                    tools:textColor="@color/primary" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/settingsTabsHolder"
                    style="@style/SettingsSectionHolder"
                    app:cardCornerRadius="@dimen/activity_margin"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:id="@+id/settingsTabsWrapper"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/settings_default_tab_holder"
                            style="@style/SettingsHolderStyle">

                            <com.goodwy.commons.views.MyTextView
                                android:id="@+id/settings_default_tab_label"
                                style="@style/SettingsTextLabelStyle"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:layout_toStartOf="@+id/settings_default_tab"
                                android:text="@string/default_tab" />

                            <com.goodwy.commons.views.MyTextView
                                android:id="@+id/settings_default_tab"
                                style="@style/SettingsTextValueStyle"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="@dimen/settings_margin"
                                tools:text="Last used one" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/settings_manage_shown_tabs_holder"
                            style="@style/SettingsHolderStyle">

                            <com.goodwy.commons.views.MyTextView
                                android:id="@+id/settings_manage_shown_tabs_label"
                                style="@style/SettingsTextLabelStyle"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="68dp"
                                android:text="@string/manage_shown_tabs" />

                            <ImageView
                                android:id="@+id/settings_manage_shown_tabs_chevron"
                                style="@style/SettingsChevronStyle"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="@dimen/smaller_margin"
                                android:contentDescription="@string/manage_shown_tabs" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/settings_navigation_bar_style_holder"
                            style="@style/SettingsHolderStyle">

                            <com.goodwy.commons.views.MyTextView
                                android:id="@+id/settings_navigation_bar_style_label"
                                style="@style/SettingsTextLabelStyle"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:layout_toStartOf="@+id/settings_navigation_bar_style"
                                android:text="@string/tab_navigation" />

                            <com.goodwy.commons.views.MyTextView
                                android:id="@+id/settings_navigation_bar_style"
                                style="@style/SettingsTextValueStyle"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="@dimen/settings_margin"
                                tools:text="@string/top" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/settings_use_icon_tabs_holder"
                            style="@style/SettingsHolderSwitchStyle">

                            <com.goodwy.commons.views.MyLiquidSwitch
                                android:id="@+id/settings_use_icon_tabs"
                                style="@style/SettingsSwitchStyle"
                                android:text="@string/use_icon_tabs"
                                app:switchPadding="@dimen/bigger_margin" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/settings_screen_slide_animation_holder"
                            style="@style/SettingsHolderStyle">

                            <com.goodwy.commons.views.MyTextView
                                android:id="@+id/settings_screen_slide_animation_label"
                                style="@style/SettingsTextLabelStyle"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:layout_toStartOf="@+id/settings_screen_slide_animation"
                                android:text="@string/screen_slide_animation" />

                            <com.goodwy.commons.views.MyTextView
                                android:id="@+id/settings_screen_slide_animation"
                                style="@style/SettingsTextValueStyle"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="@dimen/settings_margin"
                                tools:text="@string/screen_slide_animation_zoomout" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/settings_open_search_holder"
                            style="@style/SettingsHolderSwitchStyle">

                            <com.goodwy.commons.views.MyLiquidSwitch
                                android:id="@+id/settings_open_search"
                                style="@style/SettingsSwitchStyle"
                                android:text="@string/open_search_when_open_contacts"
                                app:switchPadding="@dimen/bigger_margin" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/settingsEndSearchHolder"
                            style="@style/SettingsHolderSwitchStyle">

                            <com.goodwy.commons.views.MyLiquidSwitch
                                android:id="@+id/settingsEndSearch"
                                style="@style/SettingsSwitchStyle"
                                android:text="@string/end_search_when_changing_tab"
                                app:switchPadding="@dimen/bigger_margin" />
                        </RelativeLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/settingsSwipeGesturesLabel"
                    style="@style/SettingsSectionLabelStyle"
                    android:text="@string/swipe_gestures"
                    tools:textColor="@color/primary" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/settingsSwipeGesturesHolder"
                    style="@style/SettingsSectionHolder"
                    app:cardCornerRadius="@dimen/activity_margin"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:id="@+id/settingsSwipeGesturesWrapper"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/settingsUseSwipeToActionHolder"
                            style="@style/SettingsHolderSwitchStyle">

                            <com.goodwy.commons.views.MyTextView
                                android:id="@+id/settingsUseSwipeToActionLabel"
                                style="@style/SettingsTextLabelStyle"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="false"
                                android:layout_toStartOf="@+id/settingsUseSwipeToAction"
                                android:text="@string/use_swipe_gestures" />

                            <com.goodwy.commons.views.MyTextView
                                android:id="@+id/settingsUseSwipeToActionSummary"
                                style="@style/SettingsTextSummaryStyle"
                                android:layout_below="@+id/settingsUseSwipeToActionLabel"
                                android:layout_alignParentStart="true"
                                android:layout_toStartOf="@+id/settingsUseSwipeToAction"
                                android:clickable="false"
                                android:text="@string/use_swipe_gestures_summary" />

                            <com.goodwy.commons.views.MyLiquidSwitch
                                android:id="@+id/settingsUseSwipeToAction"
                                style="@style/SettingsSwitchStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                app:switchPadding="@dimen/bigger_margin" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/settingsSwipeVibrationHolder"
                            style="@style/SettingsHolderSwitchStyle">

                            <com.goodwy.commons.views.MyLiquidSwitch
                                android:id="@+id/settingsSwipeVibration"
                                style="@style/SettingsSwitchStyle"
                                android:text="@string/vibrate_g"
                                app:switchPadding="@dimen/bigger_margin" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/settingsSwipeRippleHolder"
                            style="@style/SettingsHolderSwitchStyle">

                            <com.goodwy.commons.views.MyLiquidSwitch
                                android:id="@+id/settingsSwipeRipple"
                                style="@style/SettingsSwitchStyle"
                                android:text="@string/ripple_g"
                                app:switchPadding="@dimen/bigger_margin" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/settingsSwipeRightActionHolder"
                            style="@style/SettingsHolderSwitchStyle">

                            <com.goodwy.commons.views.MyTextView
                                android:id="@+id/settingsSwipeRightActionLabel"
                                style="@style/SettingsTextLabelStyle"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:layout_toStartOf="@+id/settingsSwipeRightAction"
                                android:text="@string/swipe_right_action" />

                            <com.goodwy.commons.views.MyTextView
                                android:id="@+id/settingsSwipeRightAction"
                                style="@style/SettingsTextValueStyle"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="@dimen/settings_margin"
                                tools:text="@string/send_sms" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/settingsSwipeLeftActionHolder"
                            style="@style/SettingsHolderSwitchStyle">

                            <com.goodwy.commons.views.MyTextView
                                android:id="@+id/settingsSwipeLeftActionLabel"
                                style="@style/SettingsTextLabelStyle"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:layout_toStartOf="@+id/settingsSwipeLeftAction"
                                android:text="@string/swipe_left_action" />

                            <com.goodwy.commons.views.MyTextView
                                android:id="@+id/settingsSwipeLeftAction"
                                style="@style/SettingsTextValueStyle"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="@dimen/settings_margin"
                                tools:text="@string/delete" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/settingsSkipDeleteConfirmationHolder"
                            style="@style/SettingsHolderSwitchStyle">

                            <com.goodwy.commons.views.MyLiquidSwitch
                                android:id="@+id/settingsSkipDeleteConfirmation"
                                style="@style/SettingsSwitchStyle"
                                android:text="@string/skip_delete_confirmation"
                                app:switchPadding="@dimen/bigger_margin" />
                        </RelativeLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/settingsListViewLabel"
                    style="@style/SettingsSectionLabelStyle"
                    android:text="@string/list_view"
                    tools:textColor="@color/primary" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/settingsListViewHolder"
                    style="@style/SettingsSectionHolder"
                    app:cardCornerRadius="@dimen/activity_margin"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:id="@+id/settingsListViewWrapper"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/settings_show_dividers_holder"
                            style="@style/SettingsHolderSwitchStyle">

                            <com.goodwy.commons.views.MyLiquidSwitch
                                android:id="@+id/settings_show_dividers"
                                style="@style/SettingsSwitchStyle"
                                android:text="@string/show_dividers"
                                app:switchPadding="@dimen/bigger_margin" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/settings_show_contact_thumbnails_holder"
                            style="@style/SettingsHolderSwitchStyle">

                            <com.goodwy.commons.views.MyLiquidSwitch
                                android:id="@+id/settings_show_contact_thumbnails"
                                style="@style/SettingsSwitchStyle"
                                android:text="@string/show_contact_thumbnails_g"
                                app:switchPadding="@dimen/bigger_margin" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/settingsContactThumbnailsSizeHolder"
                            style="@style/SettingsHolderStyle">

                            <com.goodwy.commons.views.MyTextView
                                android:id="@+id/settingsContactThumbnailsSizeLabel"
                                style="@style/SettingsTextLabelStyle"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:layout_toStartOf="@+id/settingsContactThumbnailsSize"
                                android:text="@string/contact_thumbnails_size" />

                            <com.goodwy.commons.views.MyTextView
                                android:id="@+id/settingsContactThumbnailsSize"
                                style="@style/SettingsTextValueStyle"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="@dimen/settings_margin"
                                tools:text="@string/medium" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/settings_show_phone_numbers_holder"
                            style="@style/SettingsHolderSwitchStyle">

                            <com.goodwy.commons.views.MyLiquidSwitch
                                android:id="@+id/settings_show_phone_numbers"
                                style="@style/SettingsSwitchStyle"
                                android:text="@string/show_phone_numbers_g"
                                app:switchPadding="@dimen/bigger_margin" />
                        </RelativeLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/settingsBackupsLabel"
                    style="@style/SettingsSectionLabelStyle"
                    android:text="@string/backups"
                    tools:textColor="@color/primary" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/settingsBackupsHolder"
                    style="@style/SettingsSectionHolder"
                    app:cardCornerRadius="@dimen/activity_margin"
                    android:layout_marginBottom="@dimen/activity_margin"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:id="@+id/settingsBackupsWrapper"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/contacts_export_holder"
                            style="@style/SettingsHolderStyle">

                            <com.goodwy.commons.views.MyTextView
                                android:id="@+id/contacts_export"
                                style="@style/SettingsTextLabelStyle"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="68dp"
                                android:text="@string/export_contacts_to_vcf" />

                            <ImageView
                                android:id="@+id/contacts_export_chevron"
                                style="@style/SettingsChevronStyle"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="@dimen/smaller_margin"
                                android:contentDescription="@string/export_contacts_to_vcf" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/contacts_import_holder"
                            style="@style/SettingsHolderStyle">

                            <com.goodwy.commons.views.MyTextView
                                android:id="@+id/contacts_import"
                                style="@style/SettingsTextLabelStyle"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="68dp"
                                android:text="@string/import_contacts_from_vcf" />

                            <ImageView
                                android:id="@+id/contacts_import_chevron"
                                style="@style/SettingsChevronStyle"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="@dimen/smaller_margin"
                                android:contentDescription="@string/import_contacts_from_vcf" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/settings_enable_automatic_backups_holder"
                            style="@style/SettingsHolderSwitchStyle">

                            <com.goodwy.commons.views.MyLiquidSwitch
                                android:id="@+id/settings_enable_automatic_backups"
                                style="@style/SettingsSwitchStyle"
                                android:text="@string/enable_automatic_backups"
                                app:switchPadding="@dimen/bigger_margin" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/settingsInfoAutomaticBackupsHolder"
                            style="@style/SettingsHolderStyle">

                            <LinearLayout
                                android:id="@+id/settingsInfoAutomaticBackupsWrapper"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="16dp"
                                android:layout_toStartOf="@+id/settingsInfoAutomaticBackupsCreate"
                                android:orientation="vertical">

                                <com.goodwy.commons.views.MyTextView
                                    android:id="@+id/settingsInfoAutomaticBackupsLast"
                                    style="@style/SettingsTextSummaryStyle"
                                    android:ellipsize="end"
                                    android:lines="1"
                                    android:textSize="@dimen/smaller_text_size"
                                    tools:text="Last: 01.01.2024 06:00" />

                                <com.goodwy.commons.views.MyTextView
                                    android:id="@+id/settingsInfoAutomaticBackupsNext"
                                    style="@style/SettingsTextSummaryStyle"
