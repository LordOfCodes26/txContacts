<resources>

    <style name="AppTheme" parent="AppTheme.Base" />

    <style name="roundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="LetterFastscrollerStyleSmall">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:alpha">0.8</item>
    </style>

    <style name="LetterFastscrollerStyleTiny">
        <item name="android:textSize">@dimen/tiny_text_size</item>
        <item name="android:alpha">0.8</item>
    </style>

    <style name="LetterFastscrollerStyleTooTiny">
        <item name="android:textSize">@dimen/too_tiny_text_size</item>
        <item name="android:alpha">0.8</item>
    </style>

    <style name="ContactFieldCardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeWidth">0dp</item>
    </style>

</resources>
